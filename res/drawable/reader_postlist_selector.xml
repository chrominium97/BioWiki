    <item android:state_pressed="true">
        <shape>
            <solid android:color="#e5f7fe" />
            <stroke android:width="1px" android:color="@color/blue_light" />
        </shape>
    </item>
    <item android:drawable="@drawable/reader_post_background" />
</selector>