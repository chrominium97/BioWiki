<?xml version="1.0" encoding="utf-8"?>

<!--
    tablet layout for notifications
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:foreground="@drawable/right_shadow">

        <fragment
            android:id="@+id/fragment_notes_list"
            android:name="kr.kdev.dg1s.biowiki.ui.notifications.NotificationsListFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:tag="tablet-view" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/layout_fragment_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2" />
</LinearLayout>