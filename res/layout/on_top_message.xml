<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/otm_layout"
    style="@style/WordPress.OnTopMessage"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="@dimen/ptr_tip_margin_top"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="8dp"
    android:visibility="visible">

    <kr.kdev.dg1s.biowiki.widgets.BWTextView
        android:id="@+id/otm_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/ptr_tip_message"
        android:textColor="@color/white"
        android:textSize="@dimen/text_sz_medium" />
</LinearLayout>