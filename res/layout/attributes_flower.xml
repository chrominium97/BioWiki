<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/flowerLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="5dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/flowerLabel1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="꽃차례(무한화서)"
            android:textSize="25sp" />

        <kr.kdev.dg1s.biowiki.ui.info.ExpandableGridView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/flowerGrid1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:columnWidth="150dp"
            android:gravity="center"
            android:horizontalSpacing="10dp"
            android:numColumns="2"
            android:padding="5dp"
            android:stretchMode="columnWidth"
            android:verticalSpacing="10dp" />

        <TextView
            android:id="@+id/flowerLabel2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="자방 위치"
            android:textSize="25sp" />

        <kr.kdev.dg1s.biowiki.ui.info.ExpandableGridView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/flowerGrid2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:columnWidth="150dp"
            android:gravity="center"
            android:horizontalSpacing="10dp"
            android:numColumns="2"
            android:padding="5dp"
            android:verticalSpacing="10dp" />

        <TextView
            android:id="@+id/flowerLabel3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="꽃모양(화형)"
            android:textSize="25sp" />

        <kr.kdev.dg1s.biowiki.ui.info.ExpandableGridView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/flowerGrid3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:columnWidth="150dp"
            android:gravity="center"
            android:horizontalSpacing="10dp"
            android:numColumns="2"
            android:padding="5dp"
            android:verticalSpacing="10dp" />
    </LinearLayout>
</ScrollView>