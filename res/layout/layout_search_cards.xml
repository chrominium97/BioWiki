<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_margin="5dp"
    android:gravity="left"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/plant_image"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/remote_image" />

    <TextView
        android:id="@+id/plant_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/plant_image"
        android:text="@android:string/defaultMsisdnAlphaTag"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/new_window"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@id/plant_image"
        android:layout_alignParentRight="true"
        android:layout_margin="5dp"
        android:src="@drawable/dashboard_icon_wp" />

</RelativeLayout>