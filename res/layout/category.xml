<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
<GridView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_view"
    android:padding="5dp"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:numColumns="1"
    android:columnWidth="90dp"
    android:horizontalSpacing="10dp"
    android:verticalSpacing="10dp"
    android:gravity="center" >
</GridView>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/showdetails" android:visibility="gone">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"><RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="250dp"
                android:id="@+id/image_container"
                android:adjustViewBounds="true"
                android:src="@drawable/example"
                android:layout_alignParentTop="true"/>
            <TextView
                android:id="@+id/plant_name"
                android:padding="@dimen/textview_padding"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/translucent"
                android:layout_alignBottom="@+id/image_container"
                android:text="dummy"
                android:gravity="right"
                android:textColor="@color/white"
                android:textSize="@dimen/textview_height"/>
        </RelativeLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="5dp" />
            <TextView
                android:id="@+id/plant_id"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="jongsokgangmungye"
                android:padding="5dp"
                android:textSize="25sp"/>
            <TextView
                android:id="@+id/description"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="This is a plant!"
                android:padding="5dp"
                android:textSize="20sp"/>
        </LinearLayout>
    </ScrollView>
</merge>